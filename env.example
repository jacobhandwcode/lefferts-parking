# Database Configuration
# PostgreSQL connection string
DATABASE_URL="postgresql://username:password@localhost:5432/lf_parking_db?schema=public"

# Alternative: Use SQLite for development
# DATABASE_URL="file:./dev.db"

# Vanguard LPR Integration
VANGUARD_API_KEY=""
VANGUARD_API_URL="https://api.vanguard-lpr.com/v1"
VANGUARD_WEBHOOK_SECRET=""

# Payment Provider Configuration
# For testing, you can use Stripe test keys
PAYMENT_PROVIDER_KEY=""
PAYMENT_PROVIDER_SECRET=""
PAYMENT_PROVIDER_WEBHOOK_SECRET=""

# PayParkingNotice Integration
PAYPARKINGNOTICE_URL="https://api.payparkingnotice.com"
PAYPARKINGNOTICE_API_KEY=""

# Email Service (SendGrid, Postmark, etc.)
EMAIL_SERVICE_API_KEY=""
EMAIL_FROM_ADDRESS="noreply@lfparking.com"
EMAIL_FROM_NAME="LF Parking Management"

# SMS Service (Twilio, etc.)
SMS_SERVICE_ACCOUNT_SID=""
SMS_SERVICE_AUTH_TOKEN=""
SMS_FROM_NUMBER=""

# Authentication (if using NextAuth)
NEXTAUTH_URL="http://localhost:4028"
NEXTAUTH_SECRET=""

# Application Settings
NODE_ENV="development"
APP_URL="http://localhost:4028"
APP_NAME="LF Parking Management System"

# Monitoring and Analytics (Optional)
SENTRY_DSN=""
GOOGLE_ANALYTICS_ID=""

# File Storage (for camera images, violations, etc.)
# Can use local storage or cloud services like AWS S3
STORAGE_TYPE="local" # "local" or "s3"
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_S3_BUCKET=""
AWS_S3_REGION=""

# Rate Limiting
RATE_LIMIT_ENABLED="false"
RATE_LIMIT_WINDOW_MS="900000" # 15 minutes
RATE_LIMIT_MAX_REQUESTS="100"

# Websocket/Real-time Updates
WEBSOCKET_ENABLED="false"
WEBSOCKET_PORT="3001"

# Logging
LOG_LEVEL="info" # "error" | "warn" | "info" | "debug"
LOG_TO_FILE="false"

# Scheduled Jobs (if using cron jobs)
ENABLE_SCHEDULED_JOBS="false"
DAILY_REPORT_TIME="09:00"

# Development Settings
MOCK_MODE="false" # Set to true to bypass external API calls
SEED_DATABASE="false" # Set to true to seed database on startup
